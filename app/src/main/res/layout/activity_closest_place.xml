<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="25dp"
    android:weightSum="1"
    tools:context="com.example.yusuf.myapplication.vote_screen"
    android:background="@android:color/background_dark">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="286dp"
        android:layout_weight="0.77"
        tools:context="com.example.yusuf.myapplication.closest_place" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="@android:color/background_dark"
        android:orientation="horizontal"
        android:paddingTop="7dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.77"
            android:orientation="vertical">

            <TextView
                android:id="@+id/deneme1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/background_dark"
                android:padding="0dp"

                android:text="TextView"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.77"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <ImageButton
                android:id="@+id/selected_place"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/bogaz_koprusu" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.77"
            android:orientation="vertical">

            <Button
                android:id="@+id/gps_goster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Find Closest Place" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>



